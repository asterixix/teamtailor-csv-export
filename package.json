{
  "name": "teamtailor-csv-export",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:swagger": "tsx watch src/swagger-server.ts",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:swagger\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:swagger": "node dist/swagger-server.js",
    "start:both": "concurrently \"npm run start\" \"npm run start:swagger\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "dependencies": {
    "csv-stringify": "^6.5.1",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "morgan": "^1.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
